@using ALS.Glance.Web.Resources
@{
    ViewBag.Title = "ALS Glance";
}

<!-- Header -->
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <img src="@Url.Content("~/Content/Images/logo.png")" alt="ALS Glance">
                <hr class="intro-divider">
                <ul class="list-inline intro-social-buttons">
                    <li>
                        <a href="@Url.Content("~/Content/Images/poster.png")" class="btn btn-default btn-lg"><i class="fa fa-university fa-fw"></i> <span class="network-name">Poster</span></a>
                    </li>
                    <li>
                        <a href="https://github.com/smeegoan/als-glance-lite" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                    </li>
                </ul>
            </div>
            <div class="col-md-6">
                <div class="intro-message">
                    @Html.Raw(Resources.HomeIntroduction)
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<div class="content-section-a">

    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <div class="clearfix"></div>
                <div class="intro-message">
                    @Html.Raw(Resources.HomeFlexorCarpiRadialis)
                </div>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <img src="@Url.Content("~/Content/Images/Flexor-carpi-radialis.png")" class="center-block" alt="Flexor-carpi-radialis" height="220">
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->

<div class="content-section-b">

    <div class="container">

        <div class="row">
            <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                <div class="clearfix"></div>
                <div class="intro-message">
                    @Html.Raw(Resources.HomeSternocleidomastoid)
                </div>
            </div>
            <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                <img src="@Url.Content("~/Content/Images/Sternocleidomastoideus.png")" class="center-block" alt="Sternocleidomastoideus" height="220">
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-b -->

<div class="content-section-a">

    <div class="container">

        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <div class="clearfix"></div>
                <div class="intro-message">
                    @Html.Raw(Resources.HomeTibialisAnterior)
                </div>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <img src="@Url.Content("~/Content/Images/Tibialis_anterior.png")" class="center-block" alt="Tibialis_anterior" height="220">
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>

